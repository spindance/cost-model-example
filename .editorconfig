# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.{json,y{a,}ml}]
indent_style = space
indent_size = 2

[*.{md,rmd,rst}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
